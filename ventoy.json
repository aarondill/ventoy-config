{
  "control": [
    {
      "//": "Make sure linux can access the Ventoy disk",
      "VTOY_LINUX_REMOUNT": "1"
    },
    {
      "//": "ONLY search the /iso directory for files",
      "VTOY_DEFAULT_SEARCH_ROOT": "/iso"
    }
  ],
  "theme": {
    "//": "Move the ventoy version info",
    "ventoy_left": "0%",
    "ventoy_top": "0%",
    "ventoy_color": "#FFFFFF",

